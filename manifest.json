{
  "manifest_version": 3,
  "name": "Allerbeste Schule",
  "version": "0.1",
  "description": "This extension provides better analysis tools for students that use beste.schule to help them with evaluating their grades.",
  "action": {
    "default_icon": "images/icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://beste.schule/students/*/grades"
      ],
      "js": ["content/content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"]
}